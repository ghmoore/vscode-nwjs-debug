{
    "type": "object",
    "properties":{
        "nwjsVersion":{
            "type": "string",
            "description": "Using NWjs version, You can use other archtechure with postfix.\nArchtechture: ia32, x64\n ex) 0.14.7(ia32)",
            "default": "any",
            "pattern": "^([0-9]+\\.[0-9]+\\.[0-9]+(-(alpha[0-9]+|beta[0-9]+|rc[0-9]+))?(\\((ia32|x64)\\))?|any)$"
        },
        "package":{
            "$ref": "package.schema.json",
            "description": "For override package.json"
        },
        "html":{
            "type": "array",
            "description": "HTML files to include. You can use glob.\nReferenced scripts will compiled by nwjc",
            "items":{"type":"string"}
        },
        "files":{
            "type": "array",
            "description": "Files to include. You can use glob. it will compressed by zip",
            "items":{"type":"string"}
        },
        "exclude":{
            "type": "array",
            "description": "Files to exclude from nwjs luncher. It can exclude unusing DLL",
            "items":{"type":"string"}
        },
        "zip":{
            "type": "boolean",
            "description": "Zip content files"
        },
        "prePublish":{
            "type": "string",
            "description": "shell on pre publish"
        },
        "postPublish":{
            "type": "string",
            "description": "shell on post publish"
        }
    }
}